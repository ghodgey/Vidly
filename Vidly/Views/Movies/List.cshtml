    linkText: "Add Movie",
    actionName: "New",
    controllerName: "Movies",
    routeValues: null,
    htmlAttributes: new { @class = "btn btn-primary" })
<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movies</th>
            <th>Genre</th>
